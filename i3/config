#Hier zijn mijn custom keyboard shortcuts

#Start firefox

bindsym $win+f exec firefox

#Verandert volume met 2%

bindsym XF86AudioMute exec amixer -D pulse set Master 1+ toggle
bindsym XF86AudioLowerVolume exec amixer sset 'Master' 2%-
bindsym XF86AudioRaiseVolume exec amixer sset 'Master' 2%+

#Start alsamixer om audio device te veranderen of volume per apparaat
bindsym $win + s exec gnome-terminal -x sh -c 'alsamixer'

#Resize windows met keyboard
bindsym $mod+Ctrl+Right resize shrink width 1 px or 1 ppt
bindsym $mod+Ctrl+Up resize grow height 1 px or 1 ppt
bindsym $mod+Ctrl+Down resize shrink height 1 px or 1 ppt
bindsym $mod+Ctrl+Left resize grow width 1 px or 1 ppt

#Scherm brightness controls

#De bash file roept het python script op aangezien we dat niet meteen vanuit hier kunnen doen daar staat ook met hoe veel de brightness verhoogt
bindsym XF86MonBrightnessDown exec sh /home/lukas/.config/i3/lowerBrightness.sh
bindsym XF86MonBrightnessUp exec sh /home/lukas/.config/i3/higherBrightness.sh 

#Lockscreen met i3lock
