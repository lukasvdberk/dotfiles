set $transparent #0000006f
bar {
    status_command python3 ~/.config/i3/i3pystatusconf.py && i3bar -t
    font pango:DejaVu Sans Mono, Icons 8
    tray_output primary
    workspace_buttons yes
    colors{
        background $transparent
        focused_workspace #CECECE #CECECE #000000
    }
}

